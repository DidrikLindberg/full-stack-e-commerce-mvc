<section id="products">
  <div class="container">
    <h2>Our Products</h2>
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-header">
            Filter by Category
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><a href="#">Shirts</a></li>
            <li class="list-group-item"><a href="#">Shoes</a></li>
            <li class="list-group-item"><a href="#">Hats</a></li>
            <li class="list-group-item"><a href="#">Music</a></li>
            <li class="list-group-item"><a href="#">Shorts</a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <form class="form-inline mb-3">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <div class="row">
          {{#each products}}
          <div class="col-md-4 mb-3">
            <div class="card h-100">
              <img src="{{this.image}}" class="card-img-top img-fluid" alt="Product Image">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Price: {{this.price}}</p>
                <a href="#" class="btn btn-primary">Add to Cart</a>
                <a href="#" class="btn btn-secondary">View Product</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
